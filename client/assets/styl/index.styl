@import "_default"
@import "_fonts"


*,
*:before, 
*:after
  box-sizing: border-box
  padding: 0
  margin: 0

html
  height: 100%
  font-size: 62.5% /* 62.5% of 16px = 10px */

body
  min-height: 100%
  background-color: #F0F3F7
  position: relative
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale



